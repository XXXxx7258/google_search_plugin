{
  "manifest_version": 1,
  "name": "Google 搜索插件 (Google Search Plugin)",
  "version": "1.0.0",
  "description": "支持多个搜索引擎的网络搜索插件，具有自动降级功能。",
  "author": {
    "name": "晴空",
    "url": "https://github.com/XXXxx7258"
  },
  "license": "MIT",

  "host_application": {
    "min_version": "0.10.0"
  },
  "homepage_url": "https://github.com/XXXxx7258/google_search_plugin",
  "repository_url": "https://github.com/XXXxx7258/google_search_plugin",
  "keywords": ["google", "search", "web", "internet", "查询", "搜索", "多引擎"],
  "categories": ["Search", "Utilities"],

  "default_locale": "zh-CN",
  "locales_path": "_locales",

  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "search",
    "components": [
      {
        "type": "tool",
        "name": "web_search",
        "description": "进行网络搜索并聚合结果"
      }
    ],
    "features": [
      "多引擎支持：Google、Bing、搜狗",
      "自动降级机制",
      "可配置的搜索引擎顺序",
      "重试机制",
      "丰富的配置选项"
    ]
  }

}
