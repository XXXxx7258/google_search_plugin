{
  "manifest_version": 1,
  "name": "Google 搜索以及缩写翻译插件 (Google Search and Abbreviation Translation Plugin)",
  "version": "1.0.0",
  "description": "支持多个搜索引擎的网络搜索以及聚合翻译搜索插件，具有自动降级功能。",
  "author": {
    "name": "晴空",
    "url": "https://github.com/XXXxx7258"
  },
  "license": "MIT",

  "host_application": {
    "min_version": "0.10.0"
  },
  "homepage_url": "https://github.com/XXXxx7258/google_search_plugin",
  "repository_url": "https://github.com/XXXxx7258/google_search_plugin",
  "keywords": ["google", "search", "web", "internet", "查询", "搜索", "多引擎", "翻译", "缩写", "nbnhhsh"],
  "categories": ["Search", "Utilities", "Translation"],

  "default_locale": "zh-CN",
  "locales_path": "_locales",

  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "search",
    "components": [
      {
        "type": "tool",
        "name": "web_search",
        "description": "进行网络搜索并聚合结果"
      },
      {
        "type": "tool",
        "name": "abbreviation_translate",
        "description": "翻译中文网络缩写词汇"
      }
    ],
    "features": [
      "多引擎支持：Google、Bing、搜狗",
      "自动降级机制",
      "可配置的搜索引擎顺序",
      "重试机制",
      "丰富的配置选项",
      "中文缩写翻译功能",
      "神奇海螺API集成",
      "翻译结果缓存机制"
    ]
  }

}

